</div>
<script type="text/javascript">
  let s=document.getElementsByClassName('aa');
  s.addEventListener("mouseover",switchOn)

  function switchOn(){
    document.getElementsByClassName('bulb').src="candleoff.jpeg";
  }
   let b=document.getElementsByClassName('aa');
  b.addEventListener("mouseout",switchOff)

  function switchOff(){
    document.getElementsByClassName('bulb').src="candleon.jpeg";
  }
</script>
